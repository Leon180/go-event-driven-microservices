{
    "swagger": "2.0",
    "info": {
        "description": "Simple service for loans resources",
        "title": "Loans Service API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:7004",
    "basePath": "/v1/loans",
    "paths": {
        "/loan/create": {
            "post": {
                "description": "Create a new loan",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "loans"
                ],
                "summary": "Create a new loan",
                "parameters": [
                    {
                        "description": "Loan",
                        "name": "loan",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/featuresdtos.CreateLoanRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Loan created successfully",
                        "schema": {
                            "$ref": "#/definitions/customizegin.JSONResponse"
                        }
                    }
                }
            }
        },
        "/loan/delete": {
            "post": {
                "description": "Delete a loan",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "loans"
                ],
                "summary": "Delete a loan",
                "parameters": [
                    {
                        "description": "Loan",
                        "name": "loan",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/featuresdtos.DeleteLoanRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Loan deleted successfully",
                        "schema": {
                            "$ref": "#/definitions/customizegin.JSONResponse"
                        }
                    }
                }
            }
        },
        "/loan/update": {
            "put": {
                "description": "Update an loan",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "loans"
                ],
                "summary": "Update an loan",
                "parameters": [
                    {
                        "description": "Loan",
                        "name": "loan",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/featuresdtos.UpdateLoanRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "loan updated successfully",
                        "schema": {
                            "$ref": "#/definitions/customizegin.JSONResponse"
                        }
                    }
                }
            }
        },
        "/loans/get": {
            "post": {
                "description": "Get loans by mobile number and active switch",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "loans"
                ],
                "summary": "Get loans by mobile number and active switch",
                "parameters": [
                    {
                        "description": "Loan",
                        "name": "account",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/featuresdtos.GetLoansRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "loan retrieved successfully",
                        "schema": {
                            "$ref": "#/definitions/customizegin.JSONResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "customizegin.APIError": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "integer"
                },
                "message": {
                    "type": "string"
                },
                "status": {
                    "type": "integer"
                }
            }
        },
        "customizegin.JSONResponse": {
            "type": "object",
            "properties": {
                "data": {},
                "error": {
                    "$ref": "#/definitions/customizegin.APIError"
                },
                "message": {
                    "type": "string"
                },
                "success": {
                    "type": "boolean"
                }
            }
        },
        "enums.LoanType": {
            "type": "string",
            "enum": [
                "invalid",
                "home",
                "car"
            ],
            "x-enum-varnames": [
                "LoanTypeInvalid",
                "LoanTypeHome",
                "LoanTypeCar"
            ]
        },
        "featuresdtos.CreateLoanRequest": {
            "type": "object",
            "required": [
                "interest_rate",
                "loan_type",
                "mobile_number",
                "term",
                "total_amount"
            ],
            "properties": {
                "interest_rate": {
                    "description": "@example 0.03",
                    "type": "string"
                },
                "loan_type": {
                    "description": "@example \"home\", \"car\"",
                    "allOf": [
                        {
                            "$ref": "#/definitions/enums.LoanType"
                        }
                    ]
                },
                "mobile_number": {
                    "description": "@example 0958308280",
                    "type": "string"
                },
                "term": {
                    "description": "@example 84",
                    "type": "integer"
                },
                "total_amount": {
                    "description": "@example 10000000",
                    "type": "string"
                }
            }
        },
        "featuresdtos.DeleteLoanRequest": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                }
            }
        },
        "featuresdtos.GetLoansRequest": {
            "type": "object",
            "required": [
                "mobile_number"
            ],
            "properties": {
                "active_switch": {
                    "type": "boolean"
                },
                "mobile_number": {
                    "type": "string"
                }
            }
        },
        "featuresdtos.UpdateLoanRequest": {
            "type": "object",
            "required": [
                "id"
            ],
            "properties": {
                "active_switch": {
                    "type": "boolean"
                },
                "id": {
                    "type": "string"
                },
                "interest_rate": {
                    "type": "string"
                },
                "mobile_number": {
                    "type": "string"
                },
                "paid_amount": {
                    "type": "string"
                },
                "term": {
                    "type": "integer"
                },
                "total_amount": {
                    "type": "string"
                }
            }
        }
    }
}